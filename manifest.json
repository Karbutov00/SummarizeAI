{
    "manifest_version": 3,
    "name": "ChatGPT Summarizer",
    "version": "1.0",
    "description": "Uses ChatGPT to summarize the contents of a web page into 1-2 short paragraphs",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_icon": "summarizeai.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "summarizeai.png",
        "32": "summarizeai.png",
        "48": "summarizeai.png",
        "128": "summarizeai.png"
    }
}
